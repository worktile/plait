{
  "name": "plait",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:core && npm run build:richtext && ng build layouts && npm run build:mind && npm run build:flow",
    "build:core": "ng build plait && cpx \"./packages/plait/src/styles/*.scss\" ./dist/core/styles/",
    "build:mind": " ng build mind && cpx \"./packages/mind/src/styles/*.scss\" ./dist/mind/styles/",
    "build:richtext": "ng build richtext && cpx \"./packages/richtext/src/styles/*.scss\" ./dist/richtext/styles/",
    "build:flow": "ng build flow && cpx \"./packages/flow/src/styles/*.scss\" ./dist/flow/styles/",
    "build:demo": "ng build demo --base-href=/plait/ --configuration production",
    "pub:core": "cd dist/core && npm publish --access public",
    "pub:richtext": "cd dist/richtext && npm publish --access public",
    "pub:mind": "cd dist/mind && npm publish --access public",
    "pub:layouts": "cd dist/layouts && npm publish --access public",
    "pub:flow": "cd dist/flow && npm publish --access public",
    "watch": "ng build --watch --configuration development",
    "test": "ng test mind",
    "lint": "ng lint --fix",
    "pretty": "pretty-quick --staged"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/worktile/plait"
  },
  "dependencies": {
    "@angular/animations": "^15.2.2",
    "@angular/common": "^15.2.2",
    "@angular/compiler": "^15.2.2",
    "@angular/core": "^15.2.2",
    "@angular/forms": "^15.2.2",
    "@angular/platform-browser": "^15.2.2",
    "@angular/platform-browser-dynamic": "^15.2.2",
    "@angular/router": "^15.2.2",
    "is-hotkey": "^0.2.0",
    "points-on-curve": "^1.0.0",
    "roughjs": "^4.5.2",
    "rxjs": "~7.8.0",
    "slate": "^0.73.1",
    "slate-history": "^0.66.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4",
    "immer": "^9.0.6"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.3",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@angular/cli": "^15.2.3",
    "@angular/compiler-cli": "^15.2.2",
    "@changesets/changelog-github": "^0.3.0",
    "@changesets/cli": "^2.19.0",
    "@types/is-hotkey": "^0.1.6",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "cpx": "^1.5.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^15.2.2",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "typescript": "~4.9.5"
  }
}